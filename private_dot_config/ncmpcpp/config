# Formats
# %l - length
# %f - filename
# %D - directory
# %a - artist
# %A - album artist
# %t - title
# %b - album
# %y - date
# %n - track number (01/12 -> 01)
# %N - full track info (01/12 -> 01/12)
# %g - genre
# %c - composer
# %p - performer
# %d - disc
# %C - comment
# %P - priority
# $R - begin right alignment
alternative_header_first_line_format  = "$5{%t}|{%f}$0"
alternative_header_second_line_format = "$0{$6%a}|{$1Unknown}$9 - {$6%b}|{$1Unknown}$9$0"
empty_tag_marker                      = "───"
now_playing_prefix                    = "$b$6"
now_playing_suffix                    = "$/b$9"
progressbar_look                      = "─⊙─"
song_columns_list_format              = "(8f)[default]{l} (40)[default]{t}|{f} (30)[default]{b} (20)[default]{a}"
selected_item_prefix                  = "* "
selected_item_suffix                  = ""

# Visibility
