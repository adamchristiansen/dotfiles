# Aliases
alias cdp    'cd ..'
alias cdpp   'cd ../..'
alias cdppp  'cd ../../..'
alias cdpppp 'cd ../../../..'
alias e $EDITOR
alias ep "$EDITOR -c 'set nobackup' -c 'set noswapfile' -c 'set noundofile'"
if type -q ranger
    alias r 'ranger'
end
if type -q rg
    alias rq 'rg --no-ignore --hidden --follow --glob "!.git/*"'
end
if type -q exa
    alias x  'exa'
    alias xa 'exa --git -a'
    alias xl 'exa --git -al'
    alias xt "exa --git -alT --ignore-glob='.git'"
end
if type -q xclip
    alias yy 'xclip -selection clipboard'
    alias yc 'printf "" | yy'
else if type -q pbcopy
    alias yy 'pbcopy'
    alias yc 'printf "" | yy'
end
if type -q zathura
    alias zat 'zathura --fork'
end

# Start the vi bindings
fish_vi_key_bindings insert

