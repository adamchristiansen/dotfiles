#!/usr/bin/env python3

import argparse
import datetime

from dotfiles import notify

parser = argparse.ArgumentParser(
  description="Show date and time information")
parser.add_argument("--notify",
  action="store_true",
  help="send a notification")

args = parser.parse_args()

now = datetime.datetime.now()

time = now.strftime("%H:%M")
date = now.strftime("%Y %B %d")

if args.notify:
  notify(
    app="Time",
    body=f"{time}\n{date}",
    icon="x-office-calendar",
    urgency="low",
    tag="datetime",
  )
else:
  print(f"{time} on {date}")
