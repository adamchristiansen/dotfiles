{{- $color := include ".color.json" | mustFromJson -}}

[colors]
background = "#{{ $color.base00.hex.rgb }}"
foreground = "#{{ $color.base05.hex.rgb }}"

[bar/bar]
width = 100%
height = 32
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 0
border-right-size = 0
border-bottom-size = 100%:-32
border-left-size = 0
border-color = "#80{{ $color.base00.hex.rgb }}"

font-0 = {{ .font.name }}:size={{ .font.size }};1

; Create empty module so that the polybar will start
modules-left = empty-text-label
modules-center =
modules-right =

tray-position = center
tray-padding = {{ .dim.padding }}
tray-background = ${colors.background}

; Allow control via polybar-msg
enable-ipc = true

; This prevents the window manager from managing the bar
override-redirect = true

[module/empty-text-label]
type = custom/text
; This is a zero-width space so that polybar doesn't complain that the label
; contains nothing
content = "â€‹"

[settings]
; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = false

[global/wm]
margin-bottom = 0
margin-top = 0
