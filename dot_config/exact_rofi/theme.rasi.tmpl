{{- $color := include "_color/color.json" | mustFromJson -}}

* {
    // Global variables
    color-bg:        #{{- $color.base00.hex.rgb -}}CC;
    color-fg:        #{{- $color.base05.hex.rgb -}};
    color-accent:    #{{- $color.base09.hex.rgb -}};
    padding-element: {{ .dim.padding -}}px;

    background-color: transparent;
    text-color: @color-fg;
}

window {
    background-color: @color-bg;
    height: 100%;
    padding: 20% 20%;
    width: 100%;
}

mainbox {
}

message {
}

textbox {
}

listview {
    spacing: 0px;
}

element {
    padding: @padding-element;
}

element.normal.normal,
element.normal.urgent,
element.normal.active,
element.selected.normal,
element.selected.urgent,
element.selected.active,
element.alternate.normal,
element.alternate.urgent,
element.alternate.active {
    text-color: @color-fg;
}

element.selected.normal {
    background-color: @color-accent;
    text-color: @color-fg;
}

scrollbar {
}

mode-switcher {
}

button {
}

button.selected {
}

inputbar {
}

case-indicator {
}

entry {
    text-color: @color-fg;
}

prompt {
}

inputbar {
    children: [textbox-prompt-colon, entry];
    padding: @padding-element;
}

